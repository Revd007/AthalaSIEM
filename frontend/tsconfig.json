{
    "compilerOptions": {
      "esModuleInterop": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "target": "ES6",
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "incremental": true,
      "isolatedModules": true,
      "jsx": "preserve"
    }
  }